{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2017",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importHelpers": false,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "module": "ESNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/index.test.ts"]
}
